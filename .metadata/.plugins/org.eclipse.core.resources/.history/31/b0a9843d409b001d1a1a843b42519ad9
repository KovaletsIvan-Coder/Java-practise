package kalkulator2;

import java.util.Scanner;

public class Kalkulator2 {
	public static void main (String[] args) {
		
	Scanner chuslo = new Scanner(System.in);
	double chuslo1,chuslo2,rezultat;
	String diya;
	
	System.out.print("Enter first number:");
	chuslo1 = Double.parseDouble(chuslo.nextLine());
	
	System.out.print("Enter second nuumber:");
	chuslo2 = Double.parseDouble(chuslo.nextLine());
	
	System.out.print("Enter an action (+-*/)");
	diya = chuslo.nextLine();
	 
	if (diya.equals("+")|| diya.equals("Plus")|| diya.equals("plus")) {
		rezultat = chuslo1 + chuslo2;
	}
	else if (diya.equals("-")|| (diya.equals("Minus"))|| diya.equals("minus")) {
		rezultat = chuslo1 - chuslo2;}
	else if (diya.equals("*")|| (diya.equals("Multiply"))|| diya.equals("multiply")) {
		rezultat = chuslo1 * chuslo2;}
	else if (diya.equals("/")|| (diya.equals("Divide"))|| diya.equals("divide"));{
		rezultat = chuslo1 / chuslo2;}
		System.out.print("Equals:");
}

}
