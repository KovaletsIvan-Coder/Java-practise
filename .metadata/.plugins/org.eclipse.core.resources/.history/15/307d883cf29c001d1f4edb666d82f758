package nkrementDekrement;

import java.util.Scanner;

public class IncrementDecrement {

	public static void main(String[] args) {
	Scanner chuslo = new Scanner (System.in);
	System.out.println("Enter quantity of ice cream");
	
	int iceCream = chuslo.nextInt();
	
	//System.out.println("Congratulationі!,take more" + iceCream++);     postinkrement
	//System.out.println(iceCream);
	
	//System.out.println("Congratulationі!,take more:" + ++iceCream);      preinkrement
	
	System.out.println("Sorry!,take less" + iceCream--);
	System.out.println(iceCream);
	}

}
